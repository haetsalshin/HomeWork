		for(int i = 0; i <10 ; i ++) {
		
			int strike = 10;
			int spare = 10;
			
			if(gameList.get(i-1).getScore1() == 10) {
				int intScore1 = rnd.nextInt((10)+1)+strike ;
				int intScore2 = rnd.nextInt((10)+1)+strike;
				
				int roundSum = intScore1 + intScore2;
				
				gameVO.setRoundSum(roundSum);
				
			}
			
			if(gameList.get(i-1).getScore2() == 10) {
				int intScore1 = rnd.nextInt((10)+1)+spare;
				int intScore2 = rnd.nextInt(10)+1;
				
				int roundSum = intScore1 + intScore3;
				
				gameVO.setRoundSum(roundSum);
			}
			
			
			
			
			
			
			gameVO.setScore1(intScore1);
			
			
			
			
			/*
			 * if(intScore1 == 10) { int intScore2 = rnd.nextInt((10)+1) + 10;
			 * gameVO.setScore2(intScore2);
			 * 
			 * 
			 * } else { int intScore2 = rnd.nextInt(10)+1; gameVO.setScore2(intScore2); }
			 * 
